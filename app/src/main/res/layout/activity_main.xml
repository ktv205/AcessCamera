<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/pic_thumbnail_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="take a pic and get a thumbnail back" />

            <Button
                android:id="@+id/pic_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="take a pic and save the image" />

            <Button
                android:id="@+id/pic_gallery_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="select a image from gallery" />

            <Button
                android:id="@+id/record_video_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="record a video" />
            <Button
                android:id="@+id/video_pick_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pick a video"/>

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />


        </LinearLayout>
    </ScrollView>

    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"/>


</LinearLayout>

